<div class='forgot-cont'>
<h2 class='title'>Reset Password Form</h2>
<div class='forgot-form'>

<h2 class='innertitle'>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-50 p-2 rounded' %>
  </div>

    <%= f.submit "Send me reset password instructions",class: 'w-50 rounded' %>
  
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
<script>
document.body.style.backgroundColor='blue'
</script>