


<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center">
      <div style='width:65%'>
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">
            <h2 class="fw-bold mb-2 text-uppercase">Employee</h2>
              <h2 class="fw-bold mb-2 text-uppercase">Log in</h2>
              <p class="text-white-50 mb-5">Please enter your login and password!</p>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


              <div class="form-outline form-white mb-4">
                <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'mx-auto rounded p-2 w-50' %>
                </div>
              </div>

              <div class="form-outline form-white mb-4">
                <div class="field">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'mx-auto rounded p-2 w-50' %>
                </div>
              </div>
              
              <div class="form-outline form-white mb-4">
                <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
                <% end %>
              </div>


              <div class="actions">
              <%= f.submit "Log in", class: 'user-signup-submit' %>
              
              </div>
              
              <div class="d-flex justify-content-center text-center pt-1 mt-4">
                <a href="https://www.facebook.com/" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                <a href="https://twitter.com/i/flow/login?input_flow_data=%7B%22requested_variant%22%3A%22eyJsYW5nIjoiZW4ifQ%3D%3D%22%7D" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                <a href="https://accounts.google.com/v3/signin/identifier?dsh=S638230450%3A1672813289419479&continue=https%3A%2F%2Fmail.google.com%2Fmail%2F&rip=1&sacu=1&service=mail&flowName=GlifWebSignIn&flowEntry=ServiceLogin&ifkv=AeAAQh5M0LL83KXG42oZkUYvn1elNvky-BRhtsYFDLL7SMv3BezIlWaGrTWR1bC3Si2dfaAATmpn1A" class="text-white"><i class="fab fa-google fa-lg"></i></a>
              </div>
              <% end %>
            </div>
            <div><%= link_to 'Forgot Password', new_user_password_path %></div>
            <div>
              <p class="mb-0">Don't have an account? <%= link_to 'Sign Up', new_user_registration_path %></p>
              </div>
            <div class="mt-4">
              <%= link_to 'Admin Login', admin_login_path, :class => 'bg-primary text-white px-4 py-2 m-4 rounded' %>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>





  

  

  
  

  



